    title Parallels Web Clipper

  body

    .parallels-web-clipper

      .bit-dialog

        .bit-panel
          input.bit-tags(type='text')
          input.bit-title(type='text')

          .bit-actions
            button.submit.blue Submit
            button.cancel.gray Cancel

        .bit-panel.collapsed
          img.bit-screenshot
          textarea.bit-context(placeholder='optional notes')
