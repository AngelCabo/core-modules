doctype html
html
  head
    link(type='text/css', rel='stylesheet', href='../styles/compiled/main.css')

    script(src='../bower_components/jquery/dist/jquery.min.js')
    script(src='../scripts/vendor/jquery.caret.min.js')
    script(src='../scripts/vendor/jquery.tag-editor.js')
    script(src='../bower_components/mousetrap/mousetrap.min.js')
    script(src='../bower_components/gsap/src/minified/TweenMax.min.js')
